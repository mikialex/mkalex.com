{% block content %}
<h1>test</h1

    <ul>
    {% for article in list %}
        <li>{{ article.title }}</li>
    {% else %}
      <h2>没有找到</h2>
    {% endfor %}
    </ul>

    <section class="mk-blog-list">
        {% for article in list %}
        <div class="mk-blog-block">
